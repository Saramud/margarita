datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String // admin
}

model PageContent {
  id        Int      @id @default(autoincrement())
  page      String // about, design, photography, clients, pricing, contacts
  lang      String // ru, en
  title     String
  text      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id          Int      @id @default(autoincrement())
  page        String // design, photography
  url         String
  author      String
  description String?
  createdAt   DateTime @default(now())
}

model Client {
  id          Int      @id @default(autoincrement())
  name        String
  project     String
  description String?
  createdAt   DateTime @default(now())
}

model Catalog {
  id        Int      @id @default(autoincrement())
  name      String
  fileUrl   String
  createdAt DateTime @default(now())
}
